{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GestorX",
  "version": "0.1.0",
  "identifier": "com.juliu.gestorx",
  "build": {
    "beforeDevCommand": "cd ../ && php artisan serve",
    "devUrl": "http://127.0.0.1:8000/login",
    "beforeBuildCommand": "",
    "frontendDist": "../public"
  },
  "app": {
    "windows": [
      {
        "title": "GestorX",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ]
  }
}
